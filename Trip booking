    <script>
        /* -------------------------
                   Demo data (replace with CMS or API)
                   ------------------------- */
        const ACTIVITIES = [{
            id: 'kayak-goa',
            title: 'Kayaking in Goa',
            price: 1200,
            category: 'Outdoor',
            location: 'Goa',
            image: 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=800&q=60',
            short: '2-hr coastal kayak tour'
        }, {
            id: 'food-walk-hyd',
            title: 'Hyderabad Food Walk',
            price: 800,
            category: 'Food',
            location: 'Hyderabad',
            image: 'https://images.unsplash.com/photo-1528605248644-14dd04022da1?auto=format&fit=crop&w=800&q=60',
            short: 'Taste the best local street food'
        }, {
            id: 'heritage-tour',
            title: 'City Heritage Tour',
            price: 600,
            category: 'Culture',
            location: 'Delhi',
            image: 'https://images.unsplash.com/photo-1509395176047-4a66953fd231?auto=format&fit=crop&w=800&q=60',
            short: 'Guided walk through historic sites'
        }, {
            id: 'sunset-cruise',
            title: 'Sunset Cruise',
            price: 1500,
            category: 'Outdoor',
            location: 'Mumbai',
            image: 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=800&q=60',
            short: 'Evening cruise with snacks'
        }, {
            id: 'pottery-workshop',
            title: 'Pottery Workshop',
            price: 400,
            category: 'Culture',
            location: 'Pune',
            image: 'https://images.unsplash.com/photo-1549880338-65ddcdfd017b?auto=format&fit=crop&w=800&q=60',
            short: 'Hands-on pottery for beginners'
        }, {
            id: 'street-food-beng',
            title: 'Bengaluru Street Food Tour',
            price: 900,
            category: 'Food',
            location: 'Bengaluru',
            image: 'https://images.unsplash.com/photo-1546069901-ba9599a7e63c?auto=format&fit=crop&w=800&q=60',
            short: 'Local favorites and hidden gems'
        }];

        /* -------------------------
           Cart & Wallet (localStorage)
           ------------------------- */
        const STORAGE_CART = 'allurest_demo_cart_v1';
        const STORAGE_WALLET = '';

        function getCart() {
            try {
                return JSON.parse(localStorage.getItem(STORAGE_CART)) || [];
            } catch (e) {
                return [];
            }
        }

        function saveCart(cart) {
            localStorage.setItem(STORAGE_CART, JSON.stringify(cart));
            updateCartUI();
        }

        function getWallet() {
            try {
                return JSON.parse(localStorage.getItem(STORAGE_WALLET)) || {
                    credits: 0
                };
            } catch (e) {
                return {
                    credits: 0
                };
            }
        }

        function saveWallet(w) {
            localStorage.setItem(STORAGE_WALLET, JSON.stringify(w));
            updateWalletUI();
        }

        function updateWalletUI() {
            const w = getWallet();
            document.getElementById('wallet-balance').textContent = w.credits + ' credits';
            document.getElementById('wallet-display').textContent = w.credits + ' credits';
        }

        function updateCartUI() {
            const c = getCart();
            document.getElementById('cart-count').textContent = c.length;
            document.getElementById('summary-count').textContent = c.length + ' items';
            const total = c.reduce((s, it) => s + it.price, 0);
            document.getElementById('summary-price').textContent = 'Total: ₹' + total;
            // itinerary list
            const listEl = document.getElementById('itinerary-list');
            listEl.innerHTML = '';
            if (c.length === 0) {
                listEl.innerHTML = '<div class="muted">No activities selected yet. Go to Explore and add activities.</div>';
                return;
            }
            c.forEach((it, idx) => {
                const el = document.createElement('div');
                el.className = 'itinerary-item';
                el.innerHTML = `<div>
      <div style="font-weight:700">${it.title}</div>
      <div class="muted" style="font-size:13px">${it.category} · ${it.location}</div>
      </div>
      <div style="display:flex;flex-direction:column;align-items:flex-end;gap:6px">
        <div style="font-weight:700">₹${it.price}</div>
        <div style="display:flex;gap:8px"><button class="ghost" onclick="removeFromCart(${idx})">Remove</button></div>
      </div>`;
                listEl.appendChild(el);
            });
        }

        /* -------------------------
           Render Activities grid
           ------------------------- */
        function renderActivities(filterText = '', category = '') {
            const grid = document.getElementById('activities-grid');
            grid.innerHTML = '';
            const q = filterText.toLowerCase();
            ACTIVITIES.filter(a => {
                const matchText = (!q) || a.title.toLowerCase().includes(q) || a.location.toLowerCase().includes(q) || a.short.toLowerCase().includes(q);
                const matchCat = (!category) || a.category === category;
                return matchText && matchCat;
            }).forEach(a => {
                const card = document.createElement('div');
                card.className = 'activity-card';
                card.dataset.activityId = a.id;
                card.innerHTML = `
      <div class="activity-image" style="background-image:url('${a.image}')"></div>
      <div class="activity-meta">
        <h3 class="activity-title">${a.title}</h3>
        <p class="muted">${a.short}</p>
        <div class="meta-row">
          <div class="muted">${a.category} · ${a.location}</div>
          <div style="display:flex;gap:8px;align-items:center">
            <div style="font-weight:700">₹${a.price}</div>
            <button class="add-btn" onclick="openDetail('${a.id}')">Book Now</button>
          </div>
        </div>
      </div>`;
                grid.appendChild(card);
            });
        }

        /* -------------------------
           Add / Remove / Itinerary
           ------------------------- */
        function addToCartById(id) {
            const a = ACTIVITIES.find(x => x.id === id);
            if (!a) return;
            const cart = getCart();
            if (!cart.find(i => i.id === a.id)) cart.push(a);
            saveCart(cart);
        }

        function removeFromCart(idx) {
            const cart = getCart();
            cart.splice(idx, 1);
            saveCart(cart);
        }

        function clearItinerary() {
            if (confirm('Clear your itinerary?')) {
                saveCart([]);
            }
        }

        /* -------------------------
           Modal & Detail
           ------------------------- */
        function openDetail(id) {
            const a = ACTIVITIES.find(x => x.id === id);
            if (!a) return;
            document.getElementById('modal-title').textContent = a.title;
            document.getElementById('modal-body').innerHTML = `<div style="display:flex;gap:12px;align-items:center">
    <div style="min-width:160px;height:100px;background-image:url('${a.image}');background-size:cover;border-radius:8px"></div>
    <div>
      <div style="font-weight:700">₹${a.price}</div>
      <div class="muted" style="margin-top:8px">${a.short}</div>
      <div style="margin-top:6px" class="muted">Category: ${a.category} · ${a.location}</div>
    </div>
  </div>
  <div style="margin-top:12px">${a.description || 'No further description provided.'}</div>`;
            document.getElementById('modal-add-btn').onclick = function() {
                addToCartById(id);
                closeModal();
                location.hash = '#itinerary';
            };
            document.getElementById('modal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }

        /* -------------------------
           Mock Payment & Rewards
           ------------------------- */
        function mockPay() {
            const cart = getCart();
            if (cart.length === 0) {
                alert('No activities selected');
                return;
            }
            const total = cart.reduce((s, it) => s + it.price, 0);
            // simulate network/payment step...
            // demo reward: 10% back as credits + random bonus 0-50
            const base = Math.round(total * 0.10);
            const bonus = Math.floor(Math.random() * 50);
            const earned = base + bonus;
            const wallet = getWallet();
            wallet.credits = (wallet.credits || 0) + earned;
            saveWallet(wallet);
            // clear cart (simulate booking consumed)
            saveCart([]);
            showRewards(earned, base, bonus);
        }

        function showRewards(earned, base, bonus) {
            document.getElementById('rewards-text').textContent = `You earned ${earned} credits (${base} base + ${bonus} bonus).`;
            const popup = document.getElementById('rewards-popup');
            popup.style.display = 'block';
            setTimeout(() => {
                popup.style.opacity = 1;
            }, 30);
        }

        function closeRewards() {
            const popup = document.getElementById('rewards-popup');
            popup.style.display = 'none';
        }

        /* -------------------------
           Demo helpers
           ------------------------- */
        function applyDemoCredits(amount) {
            const w = getWallet();
            w.credits = (w.credits || 0) + amount;
            saveWallet(w);
            alert('Added ' + amount + ' demo credits to wallet');
        }

        /* -------------------------
           Filters & search
           ------------------------- */
        document.getElementById('search').addEventListener('input', (e) => renderActivities(e.target.value, document.getElementById('filter-category').value));
        document.getElementById('filter-category').addEventListener('change', (e) => renderActivities(document.getElementById('search').value, e.target.value));

        function resetFilters() {
            document.getElementById('search').value = '';
            document.getElementById('filter-category').value = '';
            renderActivities();
        }

        /* -------------------------
           Hash routing simple: show sections
           ------------------------- */
        function showSectionFromHash() {
            const h = location.hash.replace('#', '') || 'home';
            // scroll into view
            const el = document.getElementById(h);
            if (el) el.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }

        /* -------------------------
           Init
           ------------------------- */
        function initDemo() {
            renderActivities();
            updateCartUI();
            updateWalletUI();
            showSectionFromHash();
            window.addEventListener('hashchange', showSectionFromHash);
        }
        initDemo();
    </script>
</body>

</html>
